.Layout
  height: 100%

  margin: 0 auto
  display: flex
  flex-direction: column

.Layout-Content
  flex: 1 0 auto

.Layout-Footer
  padding: 10px 0
  flex-shrink: 0
  text-align: center
  color: lighten($colorDarkAlpha, 75%)

.Layout-Header
  padding: 15px
  overflow: hidden

  > nav
    float: right
    a
      margin-left: 15px

.Layout-Logo
  padding-top: 10px
  float: left
  font-size: 36px
  font-weight: $fontWeightL
