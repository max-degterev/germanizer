.VerbModal-Word
  margin-right: 10px
  display: inline-block

.VerbModal-Translation
  margin-left: 10px
  display: inline-block

.VerbModal-Links
  margin-top: 15px

  a
    margin: 0 .33em

.VerbModal-Table
  width: 100%
  margin-top: 15px
  border-spacing: 0
  font-size: 12px
  word-wrap: break-word

  table-layout: auto

  th, td
    vertical-align: top

  th, td
    padding: .33em

  th,
  .VerbModal-Label
    font-size: 12px
    line-height: 1.2

  .VerbModal-Label
    strong
      display: block

  td
    span
      display: block
      font-size: 10px

      @media $mediaM
        font-size: 12px

  td:nth-child(2n)
    background: darken($colorBright, 5%)

  @media $mediaM
    font-size: $fontSizeM

    th,
    .Help-Label
      font-size: $fontSizeS
